---
import SubHeader from "@/components/SubHeader.astro";
import Layout from "@/layouts/Layout.astro";

const title = "お問い合わせ";
const description = "全日本釣魚連盟へのお問い合わせはこちらから。";
const og_image = "/images/contact.jpg";

import { getTopImages } from "@/lib/microcms";
const responseTopImages = await getTopImages({ fields: ["contact"] });
const topImage = responseTopImages.contents[0].contact;
---

<Layout title={title} description={description} og_image={og_image}>
  <main class="contact-main">
    <!-- <section class="contact-header">
      <h1>お問い合わせ</h1>
    </section> -->
    <SubHeader title="お問い合わせ" imageUrl={topImage.url} />

    <section class="contact-section">
      <div class="contact-form-wrapper">
        <form
          class="contact-form"
          method="post"
          action="https://ssgform.com/s/Tlyu3FRT8y3m"
        >
          <div class="form-row">
            <label for="email-personal">メールアドレス</label>
            <input
              type="email"
              id="email-personal"
              name="メールアドレス"
              required="required"
            />
          </div>
          <div class="form-row">
            <label for="name-personal">お名前</label>
            <input
              type="text"
              id="name-personal"
              name="お名前"
              required="required"
            />
          </div>
          <div class="form-row">
            <label for="message-personal">お問い合わせ内容</label>
            <textarea
              id="message-personal"
              name="お問い合わせ内容"
              required="required"></textarea>
          </div>
          <button type="submit">送信</button>
        </form>
      </div>
    </section>
  </main>
</Layout>
